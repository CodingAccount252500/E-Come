<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity15_ItemInfo">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/menuMoreIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:onClick="backToList"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:id="@+id/mainActionBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Item Information"
            android:fontFamily="@font/mnmn"
            android:textSize="26sp"
            android:background="@color/white"
            android:textColor="#ff6827"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="2dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                tools:context=".MainActivity">
                <ImageView

                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/itemInfoImage"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:src="@drawable/person"
                    app:civ_border_width="1dp"
                    android:layout_gravity="center_horizontal"
                    app:civ_border_color="#FF000000"/>

                <TextView
                    android:id="@+id/itemInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name :"
                    android:fontFamily="@font/text3"
                    android:textSize="9pt"
                    android:layout_marginTop="18dp"
                    android:textStyle="bold"
                    android:textColor="#130400"/>


                <TextView
                    android:id="@+id/itemInfoBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:fontFamily="@font/text3"
                    android:textSize="9pt"
                    android:layout_marginTop="18dp"
                    android:textStyle="bold"
                    android:textColor="#130400"/>
                <TextView
                    android:id="@+id/itemInfoPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password :"
                    android:textColor="#130400"
                    android:fontFamily="@font/text3"
                    android:textSize="9pt"
                    android:layout_marginTop="18dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/itemInfoDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone :"
                    android:textColor="#130400"
                    android:fontFamily="@font/text3"
                    android:textSize="9pt"
                    android:layout_marginTop="18dp"
                    android:textStyle="bold"/>



                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:bootstrapSize="md"
                    android:hint="Write Here Your Size And Color"
                    android:textColorHint="@color/black"
                    app:bootstrapBrand="info"
                    android:layout_marginTop="9dp"
                    android:inputType="text"
                    android:textColor="#130400"
                    android:id="@+id/itemNotes"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="50dp"
                    >



                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#130400"
                        android:baselineAligned="false"
                        android:fontFamily="@font/mmm"
                        android:text="AddToCart"
                        android:onClick="SaveItemInCart"
                        android:textStyle="bold"
                        app:bootstrapSize="xl"
                        app:buttonMode="regular"
                        app:roundedCorners="true"
                        app:showOutline="false" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>